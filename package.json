{
  "name": "ai-al-gaib",
  "version": "0.1.0",
  "description": "Multi-Agent AI Orchestration System",
  "author": "devacc11011 <devacc11011@users.noreply.github.com>",
  "main": "dist/electron/main.js",
  "bin": {
    "ai-al-gaib": "./dist/cli/index.js"
  },
  "scripts": {
    "postinstall": "electron-rebuild -f -w node-pty",
    "rebuild": "electron-rebuild -f -w node-pty",
    "start": "tsx src/cli/index.ts",
    "build": "tsc",
    "build:ui": "cd ui && npm run build",
    "build:all": "npm run build && npm run build:ui",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "electron": "electron dist/electron/main.js",
    "ui:dev": "cd ui && npm run dev",
    "app:dev": "tsc && concurrently \"npm run ui:dev\" \"cross-env NODE_ENV=development wait-on http://localhost:5173 && npm run electron\"",
    "pack": "npm run build:all && electron-builder --dir",
    "dist": "npm run build:all && electron-builder",
    "dist:mac": "npm run build:all && electron-builder --mac",
    "dist:win": "npm run build:all && electron-builder --win",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "release": "npm run build:all && electron-builder --publish always"
  },
  "build": {
    "appId": "com.ai-al-gaib.app",
    "productName": "AI Al-Gaib",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "ui/dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/node-pty/**/*"
    ],
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "devacc11011 <devacc11011@users.noreply.github.com>"
    },
    "publish": {
      "provider": "github",
      "owner": "YOUR_GITHUB_USERNAME",
      "repo": "ai-al-gaib"
    }
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^5.0.0",
    "commander": "^12.0.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "gray-matter": "^4.0.3",
    "inquirer": "^9.2.14",
    "marked": "^12.0.0",
    "node-pty": "^1.1.0",
    "ora": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "wait-on": "^9.0.3"
  },
  "type": "module"
}
